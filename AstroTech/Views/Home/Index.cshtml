@model AstroTech.Web.ViewModels.HomeViewModel

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- SECTION: Category Highlights -->
<div class="section">
    <div class="container">
        <div class="row">
            <!-- Laptops -->
            <div class="col-md-4 col-xs-6">
                <div class="shop">
                    <div class="shop-img">
                        <img src="~/img/shop01.png" alt="Laptops" asp-append-version="true" />
                    </div>
                    <div class="shop-body">
                        <h3>Laptops<br />Collection</h3>
                        <a href="@Url.Action("Category", "Shop", new { id = 1 })" class="cta-btn">
                            Shop now <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Accessories -->
            <div class="col-md-4 col-xs-6">
                <div class="shop">
                    <div class="shop-img">
                        <img src="~/img/shop03.png" alt="Accessories" asp-append-version="true" />
                    </div>
                    <div class="shop-body">
                        <h3>Accessories<br />Collection</h3>
                        <a href="@Url.Action("Category", "Shop", new { id = 2 })" class="cta-btn">
                            Shop now <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Cameras -->
            <div class="col-md-4 col-xs-6">
                <div class="shop">
                    <div class="shop-img">
                        <img src="~/img/shop02.png" alt="Cameras" asp-append-version="true" />
                    </div>
                    <div class="shop-body">
                        <h3>Cameras<br />Collection</h3>
                        <a href="@Url.Action("Category", "Shop", new { id = 3 })" class="cta-btn">
                            Shop now <i class="fa fa-arrow-circle-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SECTION: New Products -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">New Products</h3>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="products-slick" data-nav="#slick-nav-1">
                        @foreach (var product in Model.NewProducts)
                        {
                            <partial name="_ProductCard" model="product" />
                        }
                    </div>
                    <div id="slick-nav-1" class="products-slick-nav"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- HOT DEAL SECTION -->
<div id="hot-deal" class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="hot-deal">
                    <ul class="hot-deal-countdown">
                        <li><div><h3 id="days">00</h3><span>Days</span></div></li>
                        <li><div><h3 id="hours">00</h3><span>Hours</span></div></li>
                        <li><div><h3 id="minutes">00</h3><span>Mins</span></div></li>
                        <li><div><h3 id="seconds">00</h3><span>Secs</span></div></li>
                    </ul>
                    <h2 class="text-uppercase">Hot Deal This Week</h2>
                    <p>New Collection Up to 50% OFF</p>
                    <a href="@Url.Action("All", "Shop")" class="primary-btn cta-btn">Shop now</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- SECTION: Top Selling -->
<div class="section">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-title">
                    <h3 class="title">Top Selling</h3>
                </div>
            </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="products-slick" data-nav="#slick-nav-2">
                        @foreach (var product in Model.TopSelling)
                        {
                            <partial name="_ProductCard" model="product" />
                        }
                    </div>
                    <div id="slick-nav-2" class="products-slick-nav"></div>
                </div>
            </div>
        </div>
    </div>
</div>
