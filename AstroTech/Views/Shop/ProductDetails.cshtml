@model AstroTech.BLL.DTOs.ProductDTO

@{
    ViewData["Title"] = Model.ProductName;
}

<div class="section">
    <div class="container">
        <div class="row">
            <!-- Product Image -->
            <div class="col-md-6">
                <img src="@(!string.IsNullOrWhiteSpace(Model.PrimaryImageUrl) ? Model.PrimaryImageUrl : Url.Content("~/img/default-product.png"))"
                     alt="@Model.ProductName"
                     style="width:100%; border:1px solid #eee;" />
            </div>

            <!-- Product Info -->
            <div class="col-md-6">
                <h2>@Model.ProductName</h2>
                <p class="text-muted">@Model.CategoryName</p>
                <h3 class="text-danger">
                    @if (Model.SalePrice.HasValue)
                    {
                        <span>@($"{Model.SalePrice.Value:0.00} L.E.")</span>
                        <del class="ms-2">@($"{Model.BasePrice:0.00} L.E.")</del>
                    }
                    else
                    {
                        <span>@($"{Model.BasePrice:0.00} L.E.")</span>
                    }
                </h3>

                <p class="mt-3">@Model.ProductDescription</p>
                <p><strong>Stock:</strong> @Model.StockQuantity</p>
                <p><strong>Brand:</strong> @Model.BrandName</p>
                <p><strong>Color:</strong> @Model.Color</p>
                <p><strong>Warranty:</strong> @(Model.WarrantyPeriodMonths.HasValue ? $"{Model.WarrantyPeriodMonths} months" : "No warranty")</p>

                <hr />
                <button class="btn btn-primary"><i class="fa fa-shopping-cart"></i> Add to Cart</button>
            </div>
        </div>
    </div>
</div>
